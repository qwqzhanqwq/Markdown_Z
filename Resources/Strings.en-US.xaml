<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- Menus -->
  <sys:String x:Key="Menu_File">File</sys:String>
  <sys:String x:Key="Menu_View">View</sys:String>
  <sys:String x:Key="Menu_Language">Language</sys:String>

  <sys:String x:Key="File_New">New</sys:String>
  <sys:String x:Key="File_Open">Open...</sys:String>
  <sys:String x:Key="File_Save">Save</sys:String>
  <sys:String x:Key="File_SaveAs">Save As...</sys:String>
  <sys:String x:Key="File_ExportHtml">Export as HTML...</sys:String>
  <sys:String x:Key="File_Exit">Exit</sys:String>

  <sys:String x:Key="View_EditMode">Edit Mode</sys:String>
  <sys:String x:Key="View_ReadMode">Read Mode</sys:String>
  <sys:String x:Key="View_SplitPreview">Split Preview</sys:String>

  <sys:String x:Key="Lang_ZH">中文(简体)</sys:String>
  <sys:String x:Key="Lang_EN">English</sys:String>

  <!-- Toolbar -->
  <sys:String x:Key="Toolbar_ReadModeToggle">Read Mode</sys:String>
  <sys:String x:Key="Toolbar_New">New</sys:String>
  <sys:String x:Key="Toolbar_Open">Open</sys:String>
  <sys:String x:Key="Toolbar_Save">Save</sys:String>
  <sys:String x:Key="Toolbar_Split">Split</sys:String>

