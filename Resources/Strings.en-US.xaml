  <sys:String x:Key="Dialog_Open_Title">Open Markdown File</sys:String>
  <sys:String x:Key="Dialog_Open_Filter">Markdown Files (*.md;*.markdown)|*.md;*.markdown|All Files (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_Save_Title">Save As</sys:String>
  <sys:String x:Key="Dialog_Save_Filter">Markdown Files (*.md)|*.md|All Files (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_ExportHtml_Title">Export as HTML</sys:String>
  <sys:String x:Key="Dialog_ExportHtml_Filter">HTML Files (*.html;*.htm)|*.html;*.htm|All Files (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_Confirm_Title">Confirm</sys:String>
  <sys:String x:Key="Dialog_DiscardChanges">You have unsaved changes. Discard them?</sys:String>

  <!-- HTML export title -->
  <sys:String x:Key="Export_Default_Title">Markdown Document</sys:String>
