<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- 菜单 -->
  <sys:String x:Key="Menu_File">文件</sys:String>
  <sys:String x:Key="Menu_View">查看</sys:String>
  <sys:String x:Key="Menu_Language">语言</sys:String>

  <sys:String x:Key="File_New">新建</sys:String>
  <sys:String x:Key="File_Open">打开...</sys:String>
  <sys:String x:Key="File_Save">保存</sys:String>
  <sys:String x:Key="File_SaveAs">另存为...</sys:String>
  <sys:String x:Key="File_ExportHtml">导出为 HTML...</sys:String>
  <sys:String x:Key="File_Exit">退出</sys:String>

  <sys:String x:Key="View_EditMode">编辑模式</sys:String>
  <sys:String x:Key="View_ReadMode">阅读模式</sys:String>
  <sys:String x:Key="View_SplitPreview">双栏预览</sys:String>

  <sys:String x:Key="Lang_ZH">中文(简体)</sys:String>
  <sys:String x:Key="Lang_EN">English</sys:String>

  <!-- 工具条 -->
  <sys:String x:Key="Toolbar_ReadModeToggle">阅读模式</sys:String>
  <sys:String x:Key="Toolbar_New">新建</sys:String>
  <sys:String x:Key="Toolbar_Open">打开</sys:String>
  <sys:String x:Key="Toolbar_Save">保存</sys:String>
  <sys:String x:Key="Toolbar_Split">双栏预览</sys:String>

  <!-- 标题相关 -->
  <sys:String x:Key="Title_Untitled">未命名</sys:String>
  <sys:String x:Key="Title_Mode_Edit">编辑</sys:String>
  <sys:String x:Key="Title_Mode_Read">阅读</sys:String>

  <!-- 对话框文本 -->
  <sys:String x:Key="Dialog_Open_Title">打开 Markdown 文件</sys:String>
  <sys:String x:Key="Dialog_Open_Filter">Markdown 文件 (*.md;*.markdown)|*.md;*.markdown|所有文件 (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_Save_Title">另存为</sys:String>
  <sys:String x:Key="Dialog_Save_Filter">Markdown 文件 (*.md)|*.md|所有文件 (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_ExportHtml_Title">导出为 HTML</sys:String>
  <sys:String x:Key="Dialog_ExportHtml_Filter">HTML 文件 (*.html;*.htm)|*.html;*.htm|所有文件 (*.*)|*.*</sys:String>
  <sys:String x:Key="Dialog_Confirm_Title">确认</sys:String>
  <sys:String x:Key="Dialog_DiscardChanges">当前文档尚未保存，是否放弃未保存的更改？</sys:String>

  <!-- HTML 导出的标题 -->
  <sys:String x:Key="Export_Default_Title">Markdown 文档</sys:String>
</ResourceDictionary>
